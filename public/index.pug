mixin details(indicator , info , $second)
    .columna__details__column
        p.columna__details__column__indicator(class=`columna__details__column__indicator--${$second}`) #{indicator}
        h4.columna__details__column__info(class=`columna__details__column__info--${$second}`) #{info}
mixin inputs(utilidad , typeinput) 
    label(for=`formulario de ${utilidad}`)
        input.formulario__inputs_text(type=`${typeinput}` , placeholder=`${utilidad}`) 
mixin pictures(rute , speach)
    picture
        img(src=`${rute}`, alt=`${speach}`)
